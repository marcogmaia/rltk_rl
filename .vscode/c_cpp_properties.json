{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/lib/libtcod/src/**",
                "${workspaceFolder}/src",
                // "${workspaceFolder}/src/entity",
                "${workspaceFolder}/src/component"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/lib/libtcod/**",
                    "${workspaceFolder}/src/**"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "gcc-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}